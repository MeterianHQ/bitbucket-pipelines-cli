FROM maven:latest

WORKDIR /home/

COPY .  /home/

ARG METERIAN_API_TOKEN
ENV METERIAN_API_TOKEN=${METERIAN_API_TOKEN}

ARG METERIAN_BITBUCKET_USER
ENV METERIAN_BITBUCKET_USER=${METERIAN_BITBUCKET_USER}

ARG METERIAN_BITBUCKET_APP_PASSWORD
ENV METERIAN_BITBUCKET_APP_PASSWORD=${METERIAN_BITBUCKET_APP_PASSWORD}

ARG METERIAN_BITBUCKET_EMAIL
ENV METERIAN_BITBUCKET_EMAIL=${METERIAN_BITBUCKET_EMAIL}

RUN mvn dependency:go-offline